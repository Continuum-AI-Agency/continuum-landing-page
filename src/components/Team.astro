<script>
  // Team cards – toggle active
  const teamCards = document.querySelectorAll(".ch-team-card");
  if (teamCards.length) {
    teamCards.forEach((card) => {
      card.addEventListener("click", () => {
        const isActive = card.classList.contains("is-active");
        teamCards.forEach((c) => c.classList.remove("is-active"));
        if (!isActive) {
          card.classList.add("is-active");
        }
      });
    });
  }
  
  // Reveal
  if ("IntersectionObserver" in window) {
      const observer = new IntersectionObserver((entries) => {
          entries.forEach(e => {
              if (e.isIntersecting) {
                  e.target.classList.add("is-visible");
                  observer.unobserve(e.target);
              }
          })
      }, { threshold: 0.1 });
      const el = document.querySelector("#team");
      if(el) el.querySelectorAll(".reveal").forEach(r => observer.observe(r));
  }
</script>